  /*
   * Get ongoing projects for a client
   * @author Anders Hassis
   */
  public static function getClientOngoingProjects() {
    global $base_url, $user;

    //SQL query to grab needed infomation from the database
    $query = '
    SELECT 
      users.name,
      users.uid,
      node.title,
      node.nid,
      users_projects.id
