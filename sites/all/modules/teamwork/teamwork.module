/*
 * Helper function for determining if a project is taken or not
 * @author Anders Hassis
 */
function teamwork_job_taken($node_id) {
  $exists = db_query('SELECT 1 FROM users_projects WHERE node_id = :nid', array(':nid' => $node_id) )->fetchField();

  if ($exists == 1)
    return true;
  else
    return false;
}

/*
 * Helper function for determining if a project is taken or 
 * not by a specified user
 * @author Anders Hassis
 */
function teamwork_job_taken_by_user($node_id, $user_id) {
  $exists = db_query('SELECT 1 FROM users_projects WHERE node_id = :nid AND user_id = :uid', array(':nid' => $node_id, ':uid' => $user_id) )->fetchField();

  if ($exists == 1)
    return true;
  else
    return false;
}

/*
 * Delegate a job to a user
 * @author Anders Hassis
 */
function teamwork_delegate_job($user_id = 0, $node_id = 0) {
  global $base_url;
  
  if ($user_id == 0 || $node_id == 0)
    die("Not enough arguments");
    
  if (teamwork_job_taken($node_id)) {
    die("Project already assigned");
  }
    
  $nid = db_insert('users_projects') // Table name no longer needs {}
  ->fields(array(
    'user_id' => $user_id,
    'node_id' => $node_id
  ))
  ->execute();

  header("location: ". $_SERVER['HTTP_REFERER']);
  die();
}

/*
 * Mark a project as completed
 * @author Anders Hassis
 */
function teamwork_mark($id) {
  global $base_url;
  
  if ($id == 0)
    die("Not enough arguments");
    
  $num_updated = db_update('users_projects') // Table name no longer needs {}
    ->fields(array(
      'status' => 1,
    ))
    ->condition('id', $id)
    ->execute();

  header("location: ". $_SERVER['HTTP_REFERER']);
  die();
}

/*
 * Approve a project making it visible
 * @author Anders Hassis
 */
function teamwork_approve_project($node_id) {
  global $base_url;
  
  if ($node_id == 0)
    die("Not enough arguments");
    
  $num_updated = db_update('node') // Table name no longer needs {}
    ->fields(array(
      'status' => 1,
    ))
    ->condition('nid', $node_id)
    ->execute();

  header("location: ". $_SERVER['HTTP_REFERER']);
  die();
}

/*
 * Approve a user awaiting reviewal
 * @author Anders Hassis
 */
function teamwork_approve_user($user_id) {
  global $base_url;
  
  if ($user_id == 0)
    die("Not enough arguments");
    
  $num_updated = db_update('users') // Table name no longer needs {}
    ->fields(array(
      'status' => 1,
    ))
    ->condition('uid', $user_id)
    ->execute();

  header("location: ". $_SERVER['HTTP_REFERER']);
  die();
}

/*
 * Show ratings on profile page
 * @author Phoeun Phan
 */
function teamwork_profile_ratings($userid) {
  global $base_url;
  $result = db_query('SELECT pid FROM profile WHERE uid = :uid', array(':uid' => $userid));
  $id = $result->fetchColumn();
  $img = $base_url . '/' . drupal_get_path('module', 'teamwork') . '/stars-';

  echo '<table><tr><td><b>PERFORMANCE</b></td><td><b>COMMUNICATION</b></td>';
  echo '<td><b>PUNCTUALITY</b></td><td><b>ORGANIZATION</b></td></tr><tr>';
  
  teamwork_print_stars(fivestar_get_votes('profile2', $id, 'performance'), $img);
  teamwork_print_stars(fivestar_get_votes('profile2', $id, 'communication'), $img);
  teamwork_print_stars(fivestar_get_votes('profile2', $id, 'punctuality'), $img);
  teamwork_print_stars(fivestar_get_votes('profile2', $id, 'organization'), $img);
  
  echo '</tr></table>';
} 

/*
 * Display star ratings
 * @author Phoeun Phan
 */
function teamwork_print_stars($votes, $img) {
  $avg = $votes['average']['value']/20;
  $count = $votes['count']['value'];
  $stars = floor($avg);
  echo '<td><img src="' . $img . $stars .'.gif"/><br>';
  echo 'Average: ' . $avg . ' (' . $count. ' vote';
  echo $count == 1 ? '' : 's';
  echo ')</td>';
}

